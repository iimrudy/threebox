{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "outFile": "./dist/build.js",
    "module": "amd",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "src/"
  },
  "include": ["./src"]
}
